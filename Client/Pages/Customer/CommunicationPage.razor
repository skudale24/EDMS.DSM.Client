@page "/"

@using EDMS.DSM.Shared.Models;

<MudDataGrid T="Communications" MultiSelection="true" Items="@Elements" SortMode="MudBlazor.SortMode.Multiple" Filterable="true" QuickFilter="@_quickFilter"
             Hideable="true" RowClick="@RowClicked" SelectedItemsChanged="@SelectedItemsChanged" Class="table-striped" Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Customer Communication</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" Immediate="true"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <Columns>
        <SelectColumn T="Communications" />
        <PropertyColumn Property="x => x.TemplateName" Title="Letter Type" />
        <PropertyColumn Property="x => x.LPCID" />
        @*<PropertyColumn Property="x => x.Name" SortBy="@_sortBy" />*@
        <TemplateColumn CellClass="d-flex justify-end" Title="Action">
            <CellTemplate>
                <MudStack Row>
                    <span class="badge py-3 px-4 fs-7 badge-light-primary">@context.Item.Action</span>
                    @*<MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary">@context.Item.Action</MudButton>*@
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
        <PropertyColumn Property="x => x.GeneratedDate" Title="Letter Generated Date" />
        <PropertyColumn Property="x => x.GeneratedBy" Title="Letter Generated By" />
        <TemplateColumn CellClass="d-flex justify-end" Title="Customer List">
            <CellTemplate>
                <MudStack Row>
                    <MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary">Export</MudButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <PagerContent>
        <MudDataGridPager T="Communications" />
    </PagerContent>
</MudDataGrid>

<div class="d-flex flex-wrap mt-4">
    <MudSwitch @bind-Checked="@_sortNameByLength" Color="Color.Primary">Sort Name Column By Length</MudSwitch>
</div>

<MudExpansionPanels Style="flex:1">
    <MudExpansionPanel Text="Show Events">
        @foreach (var message in _events)
        {
            <MudText Typo="@Typo.body2">@message</MudText>
        }
        @if (_events.Count > 0)
        {
            <div class="d-flex">
                <MudSpacer />
                <MudButton Class="mt-3" ButtonType="MudBlazor.ButtonType.Button" Variant="Variant.Filled" OnClick="@(() => _events.Clear())">Clear</MudButton>
            </div>
        }
    </MudExpansionPanel>
</MudExpansionPanels>
