@page "/support/claims"
@inject AuthenticationStateProvider AuthenticationStateProvider

<MudGrid>
    <MudItem xs="12" sm="12" md="12" lg="12" xl="12">
        <MudGrid>
            <MudItem xs="12" sm="6" md="6" lg="6" xl="6">
                <MudHidden Breakpoint="Breakpoint.Xs">
                    <MudText Typo="Typo.h4" Color="Color.Primary">User Roles</MudText>
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                    <MudStack Row="true" Justify="Justify.Center" AlignItems="AlignItems.Center">
                        <MudIcon Color="Color.Primary" Icon="@Icons.Material.Outlined.Person"/>
                        <MudText Typo="Typo.h6" Color="Color.Primary">User Roles</MudText>
                    </MudStack>
                </MudHidden>
            </MudItem>
        </MudGrid>
    </MudItem>
    <MudItem xs="12" sm="12" md="12" lg="12" xl="12">
        <MudGrid>
            <MudPaper Class="mud-width-full py-4 px-4 ma-2">
                <MudItem xs="12" sm="12" md="12" lg="12" xl="12">
                    <p>@authMessage</p>
                </MudItem>
                <MudItem xs="12" sm="12" md="12" lg="12" xl="12">
                    @if (claims.Count() > 0)
                    {
                        <ul>
                            @foreach (var claim in claims)
                            {
                                <li>@claim.Type: @claim.Value</li>
                            }
                        </ul>
                    }
                </MudItem>
                <MudItem xs="12" sm="6" md="4" lg="4" xl="4">
                    <MudItem xs="12" sm="6" md="6" lg="6" xl="6">
                        <MudHidden Breakpoint="Breakpoint.Xs">
                            <MudButton ButtonType="ButtonType.Submit" Class="mr-1"
                                       OnClick="GetClaimsPrincipalData"
                                       Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary" Margin="Dense">
                                Get ClaimsPrincipal Data
                            </MudButton>
                        </MudHidden>
                        <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                            <MudStack Row="true" Justify="Justify.Center" AlignItems="AlignItems.Center">
                                <MudButton ButtonType="ButtonType.Submit" Class="mr-1"
                                           OnClick="GetClaimsPrincipalData"
                                           Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary" Margin="Dense">
                                    Get ClaimsPrincipal Data
                                </MudButton>
                            </MudStack>
                        </MudHidden>
                    </MudItem>
                </MudItem>
            </MudPaper>
        </MudGrid>
    </MudItem>
</MudGrid>
